{
  "scripts": {
    "frontend:install": "cd ecommerce-frontend-app && npm install -f",
    "frontend:start": "cd ecommerce-frontend-app && npm run start",
    "frontend:build": "cd ecommerce-frontend-app && npm run build",
    "frontend:test": "cd ecommerce-frontend-app && npm run test",
    "frontend:e2e": "cd ecommerce-frontend-app && npm run e2e",
    "frontend:lint": "cd ecommerce-frontend-app && npm run lint",
    "frontend:deploy": "cd ecommerce-frontend-app && npm run deploy",
    "api:install": "cd ecommerce-backend-api && npm install .",
